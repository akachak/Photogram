
WindowManager:
    InForm:
    RegForm:
    WtfForm:


<InForm@Screen>:
    name: 'inform'
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            Label:
                text: 'Login'
            TextInput:
                multiline: False

        BoxLayout:
            Label:
                text: 'Password'
            TextInput:
                multiline: False
      
        BoxLayout:
            Label:
                text: 'Save'
            CheckBox:
      
        Button:
            text: 'Войти'
        Button:
            text: 'Зарегистрироваться'
            on_release: app.root.current = 'regform'

<RegForm@Screen>:
    name: 'regform'
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            Label:
                text: 'Login'
            TextInput:
                multiline: False

        BoxLayout:
            Label:
                text: 'Password'
            TextInput:
                multiline: False
        
        BoxLayout:
            Label:
                text: 'Return Password'
            TextInput:
                multiline: False
        Button:
            text: 'Зарегистрироваться'
            on_release: app.root.current = 'wtfform'

<WtfForm@Screen>:
    name: 'wtfform'
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            Label:
                text: 'Return Password'
            TextInput:
                multiline: False
        Button:
            text: 'Goback'
            on_release: app.root.current = 'inform'

