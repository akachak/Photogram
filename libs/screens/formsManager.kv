
<InForm@Screen>:
    name: 'inform'
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            TextInput:
                id: inLogin
                size_hint: 1, 0.5
                multiline: False
        BoxLayout:
            TextInput:
                size_hint: 1, 0.5
                multiline: False
      
        BoxLayout:
            Label:
                text: 'Save'
            CheckBox:
      
        Button:
            size_hint: 1, 0.5
            text: 'Войти'
            on_release:
                if(root.check()): root.manager.current = 'wtfform'
        Button:
            size_hint: 1, 0.5
            text: 'Зарегистрироваться'
            on_release: 
                root.manager.current = 'regform'

<RegForm@Screen>:
    name: 'regform'
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            Label:
                text: 'Login'
            TextInput:
                multiline: False

        BoxLayout:
            Label:
                text: 'Password'
            TextInput:
                multiline: False
        
        BoxLayout:
            Label:
                text: 'Return Password'
            TextInput:
                multiline: False
        Button:
            text: 'Зарегистрироваться'
            on_release: 
                
                root.manager.current = 'wtfform'

<WtfForm@Screen>:
    name: 'wtfform'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            DownPanel:
        Button:
            text: 'Goback'
            on_release: 
                
                root.manager.current = 'inform'

