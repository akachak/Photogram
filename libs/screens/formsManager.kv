
<InForm@Screen>:
    name: 'inform'

    inLogin: inLogin
    inPassword: inPassword
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Login'
            TextInput:
                id: inLogin
                size_hint: 1, 0.5
                multiline: False
                hint_text: 'Enter Login'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text:'Password'
            TextInput:
                id: inPassword
                size_hint: 1, 0.5
                multiline: False
                hint_text: 'Enter Password'
                password: True

        BoxLayout:
            Label:
                text: 'Save'
            CheckBox:
      
        Button:
            size_hint: 1, 0.5
            text: 'Войти'
            on_release:
                if(root.check()): root.manager.current = 'wtfform'
        Button:
            size_hint: 1, 0.5
            text: 'Зарегистрироваться'
            on_release: 
                root.manager.current = 'regform'

<RegForm@Screen>:
    name: 'regform'

    regLogin: regLogin
    regPassword: regPassword
    regRetPassword: regRetPassword
    BoxLayout:
        orientation: 'vertical'
        padding: '40 dp'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Login (UserName)'
            TextInput:
                id: regLogin
                size_hint: 1, 0.5
                multiline: False
            Label:
                text: 'Password'
            TextInput:
                id: regPassword
                size_hint: 1, 0.5
                multiline: False
            Label:
                text: 'Return Password'
            TextInput:
                id: regRetPassword
                size_hint: 1, 0.5
                multiline: False
            

            
        Button:
            size_hint: 0.8, 0.2
            text: 'Зарегистрироваться'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: 
                if(root.reg()): root.manager.current = 'wtfform'

<WtfForm@Screen>:
    name: 'wtfform'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            DownPanel:
        BoxLayout:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'y': 1}
            Image:
                source: 'libs/images/girl_one.png'
            Image:
                source: 'libs/images/girl_three.png'
            Button:
                text: 'Выйти'
                on_release: 
                    root.manager.current = 'inform'
            Image:
                source: 'libs/images/girl_two.png'
            Image:
                source: 'libs/images/girl_four.png'
        

